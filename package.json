{
  "version": "0.0.0",
  "devDependencies": {
    "@types/jest": "25.1.4",
    "jasmine-check": "1.0.0-rc.0",
    "jest": "25.2.3",
    "lerna": "3.20.2",
    "prettier": "2.0.2",
    "rimraf": "3.0.2",
    "testcheck": "1.0.0-rc.2",
    "tslint": "6.1.0",
    "typescript": "3.8.3"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "manager": "yarn",
  "private": true,
  "resolutions": {
    "deep-extend": ">=0.5.1",
    "mem": ">=4.0.0"
  },
  "scripts": {
    "build": "yarn build:expect-more && yarn build:expect-more-jest",
    "build:expect-more": "tsc --project ./packages/expect-more",
    "build:expect-more-jest": "tsc --project ./packages/expect-more-jest",
    "format": "prettier --write '**/*.md' './*.{js,json}' './scripts/**/*.js' './packages/*/src/**/*.ts' './packages/*/test/**/*.ts'",
    "generate-matchers": "rm ./packages/expect-more-jest/src/*.ts ./packages/expect-more-jest/test/* && node ./scripts/generate-matchers.js && yarn format",
    "lint": "tslint --fix --project ./tsconfig.json",
    "prebuild": "rimraf ./packages/*/dist",
    "prelint": "yarn format",
    "test": "jest"
  },
  "workspaces": [
    "packages/*",
    "scripts/*"
  ]
}
